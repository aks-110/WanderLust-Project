<% layout("/layouts/boilerplate.ejs") -%>

<!-- Include Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
  /* Star Rating Styles */
  .star-rating {
    display: flex;
    flex-direction: row-reverse;
    font-size: 1.5rem;
    justify-content: center;
    gap: 0.5rem;
  }

  .star-rating input[type="radio"] {
    display: none;
  }

  .star-rating label {
    color: #ddd;
    cursor: pointer;
    transition: color 0.2s;
  }

  .star-rating input[type="radio"]:checked ~ label,
  .star-rating label:hover,
  .star-rating label:hover ~ label {
    color: #f5b301;
  }

  /* Review Cards */
  .review-card {
    border-radius: 1rem;
    box-shadow: 0 0 15px rgba(0,0,0,0.05);
    padding: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .review-author {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .review-author .avatar {
    width: 50px;
    height: 50px;
    background-color: #343a40;
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 1.2rem;
  }

  .review-stars i {
    color: #f5b301;
    margin-right: 2px;
  }
</style>

<div class="container my-5">
  <h3 class="text-center fw-bold mb-4"><%= listing.title %></h3>

  <!-- Listing Card -->
  <div class="card shadow-lg mx-auto p-4" style="max-width: 720px; border-radius: 1rem;">
    <div class="mb-3">
      <img src="<%= listing.image.url %>" class="img-fluid rounded" alt="<%= listing.title %> image"
           style="width: 100%; height: 320px; object-fit: cover; border-radius: 0.75rem;">
    </div>
    <div>
      <p><i>Owned by <%= listing.owner.username %></i></p>
      <p><strong>Description:</strong> <%= listing.description %></p>
      <p><strong>Price:</strong> â‚¹ <%= typeof listing.price === 'number' ? listing.price.toLocaleString("en-IN") : 'N/A' %> / night</p>
      <p><strong>Location:</strong> <%= listing.location %></p>
      <p><strong>Country:</strong> <%= listing.country %></p>
      <% if(currUser && String(listing.owner._id) === String(currUser._id)) { %>
      <div class="d-flex gap-3">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-primary btn-sm">
          <i class="fa-solid fa-pen-to-square me-1"></i> Edit
        </a>
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" onsubmit="return confirm('Delete this listing?')">
          <button class="btn btn-outline-danger btn-sm"><i class="fa-solid fa-trash me-1"></i> Delete</button>
        </form>
      </div>
      <% } %>
    </div>
  </div>

  <!-- Leave Review -->
  <% if(currUser) { %>
  <div class="col-md-8 offset-md-2 mt-5">
    <h4 class="text-center mb-4">Leave a Review</h4>
    <form action="/listings/<%= listing._id %>/reviews" method="POST" class="card shadow-sm p-4 rounded-4 needs-validation" novalidate>
      <!-- Star rating -->
      <div class="star-rating mb-3">
        <input type="radio" id="star5" name="review[rating]" value="5" required>
        <label for="star5"><i class="fa-solid fa-star"></i></label>

        <input type="radio" id="star4" name="review[rating]" value="4">
        <label for="star4"><i class="fa-solid fa-star"></i></label>

        <input type="radio" id="star3" name="review[rating]" value="3">
        <label for="star3"><i class="fa-solid fa-star"></i></label>

        <input type="radio" id="star2" name="review[rating]" value="2">
        <label for="star2"><i class="fa-solid fa-star"></i></label>

        <input type="radio" id="star1" name="review[rating]" value="1">
        <label for="star1"><i class="fa-solid fa-star"></i></label>
      </div>

      <div class="mb-3">
        <textarea name="review[comment]" class="form-control" rows="4" placeholder="Write your review..." required></textarea>
        <div class="invalid-feedback">Please enter a comment.</div>
      </div>
      <div class="d-grid">
        <button type="submit" class="btn btn-dark"><i class="fa-solid fa-paper-plane me-1"></i> Submit Review</button>
      </div>
    </form>
  </div>
  <% } %>

  <hr class="my-5">

  <!-- Display Reviews -->
  <div class="col-md-8 offset-md-2">
    <h4 class="text-center mb-4">All Reviews</h4>
    <% if(listing.reviews.length === 0) { %>
      <p class="text-center text-muted">No reviews yet.</p>
    <% } %>

    <% listing.reviews.forEach(review => { %>
      <div class="review-card">
        <div class="review-author mb-2">
          <div class="avatar"><%= review.author.username[0].toUpperCase() %></div>
          <div>
            <strong><%= review.author.username %></strong><br>
            <small class="text-muted">Posted recently</small>
          </div>
          <div class="ms-auto review-stars">
            <% for(let i=1; i<=5; i++){ %>
              <% if(i <= review.rating){ %>
                <i class="fa-solid fa-star"></i>
              <% } else { %>
                <i class="fa-regular fa-star"></i>
              <% } %>
            <% } %>
          </div>
        </div>
        <p><%= review.comment %></p>

        <% if(currUser && String(review.author._id) === String(currUser._id)) { %>
        <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" class="text-end" onsubmit="return confirm('Delete your review?')">
          <button class="btn btn-sm btn-outline-danger"><i class="fa-solid fa-trash me-1"></i> Delete</button>
        </form>
        <% } %>
      </div>
    <% }); %>
  </div>
</div>

<script>
  (() => {
    "use strict";
    const forms = document.querySelectorAll(".needs-validation");
    Array.from(forms).forEach((form) => {
      form.addEventListener("submit", (event) => {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add("was-validated");
      });
    });
  })();
</script>
