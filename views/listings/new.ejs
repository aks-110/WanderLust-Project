<% layout("layouts/boilerplate") %>

<h3 class="mb-4 text-center">Create a New Listing</h3>

<div class="row justify-content-center">
  <div class="col-md-6">
    <form
      action="/listings"
      method="POST"
      class="g-3 needs-validation"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          name="listings[title]"
          type="text"
          id="title"
          class="form-control"
          required
        />
        <div class="valid-feedback">Title looks good!</div>
      </div>

      <div class="row">
        <div class="col-md-6 mb-3">
          <label for="price" class="form-label">Price</label>
          <input
            name="listings[price]"
            type="text"
            id="price"
            placeholder="Enter price"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter valid price</div>
        </div>

        <div class="col-md-6 mb-3">
          <label for="country" class="form-label">Country</label>
          <input
            name="listings[country]"
            id="country"
            type="text"
            placeholder="Enter country"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter valid country name</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          name="listings[location]"
          id="location"
          type="text"
          placeholder="Enter location"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter correct location </div>
      </div>
      
      <div class="mb-3">
        <label for="image" class="form-label">Upload Listing Image</label>
        <input
          name="listings[image]"
          id="image"
          type="file"
          class="form-control"
        />
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listings[description]"
          id="description"
          rows="4"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">please enter  short description</div>
      </div>

      <div class="text-center">
        <button type="submit" class="btn btn-dark">Add Listing</button>
      </div>
    </form>
  </div>
</div>
